@using todolist.Models;
@model List<datatodo>
@{
    ViewData["Title"] = "Aylık";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}

<br />
<h2>Aylık Program</h2>
<br />
@using (Html.BeginForm("Aylık","datatos",FormMethod.Get))
{
    <p>
        Ay giriniz:
        <input type="month" name="SearchString">
        <input type="submit" value="Search" /></p>
}
<br />
<table class="table table-bordered">
   
    <tr>
        <th> id </th>
        <th> Yapılacaklar </th>
        <th> Tarih </th>
    </tr>
    @foreach (var x in Model)
   {
       <tr>
            <td>@x.Id</td>
            <td>@x.Donote</td>
            <td>@x.Datetime</td>
            <td><a href ="/datatos/KayitSil/@x.Id" class="btn btn-danger">Sil</a> </td>
            <td><a href ="/datatos/KayitGetir/@x.Id" class="btn btn-success">Güncelle</a> </td>
       </tr>
        
   }
   
</table>


