
@{
    ViewData["Title"] = "Yıllık";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}
<br />
<h2>Yıllık Program</h2>
<br />
@using (Html.BeginForm("Yıllık","datatos",FormMethod.Get))
{
    <p>
        Yıl giriniz: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" /></p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th> id </th>
        <th> Yapılacaklar </th>
        <th> Tarih </th>
    </tr>
    @foreach (var x in Model)
   {
    <tr>
        <td>@x.Id</td>
        <td>@x.Donote</td>
        <td>@x.Datetime</td>
        <td><a href ="/datatos/KayitSil/@x.Id" class="btn btn-danger">Sil</a> </td>
        <td><a href ="/datatos/KayitGetir/@x.Id" class="btn btn-success">Güncelle</a> </td>
    </tr>
   }
   
</table>

